@model IEnumerable<SelfPay.Common.Models.Service>

@{
    var pageName = "Listagem de serviços";
    ViewData["Title"] = pageName;
}

<div class="container-xl">
    <div class="row row-cards">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card" style="width: 18rem;">
                    <img src="/img/services/@item.ImageUrl" onerror="ImgError(this)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="@Url.Action("Create", "Order", new { id = item.Id, price = item.Price15 })" class="btn btn-primary">15 minutos</a>
                        <a href="@Url.Action("Create", "Order", new { id = item.Id, price = item.Price20 })" class="btn btn-primary">20 minutos</a>
                        <a href="@Url.Action("Create", "Order", new { id = item.Id, price = item.Price30 })" class="btn btn-primary">30 minutos</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>