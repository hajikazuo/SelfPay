@model SelfPay.Common.Models.Service

@{
    var pageName = "Detalhes do serviço";
    ViewData["Title"] = pageName;
}

<div class="container-xl">
    <div class="row row-cards">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@pageName</h4>
                </div>
                <div class="card-body">
                    <img src="/assets/img/services/@Model.ImageUrl" alt="Service image" class="avatar avatar-xl mb-3 rounded" onerror="ImgError(this)">
                    <p><strong>@Html.DisplayNameFor(model => model.Name):</strong> @Model.Name</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Description):</strong> @Model.Description</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Price15):</strong> @Model.Price15</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Price20):</strong> @Model.Price20</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Price30):</strong> @Model.Price30</p>
                </div>
                <div class="card-footer text-end">
                    <div class="d-flex">
                        <a asp-action="Index" class="btn btn-link">Voltar para a lista</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ms-auto">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>